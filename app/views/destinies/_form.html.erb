<%= simple_form_for(@destiny) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nome %>
    <%= f.input :cep %>
    <%= f.input :municipio, collection: @lista_municipios, as: :select, :include_blank => true %>
    <%= f.input :bairro %>
    <%= f.input :logradouro %>
    <%= f.input :numero %>
    <%= f.input :descricao %>
    <%= f.input :tipo, :as => :hidden, :input_html => {value: "DESLOCAMENTO URBANO"} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
