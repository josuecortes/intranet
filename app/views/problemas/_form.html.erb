<%= simple_form_for(@problema) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :descricao %>
    <%= f.input :solucao, as: :text, :input_html=>{:rows => 10} %>
    
    <%= f.input :tipo, collection: @lista_tipo_problemas, as: :select, :include_blank => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Salvar", :class=>'btn btn-primary' %>
    <%= link_to 'Voltar', problemas_path, :class=>'btn btn-default' %>
  </div>
<% end %>
