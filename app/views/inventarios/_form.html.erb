<%= simple_form_for(@inventario) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :departamento_id %>
    <%= f.input :quantidade %>
    <%= f.input :estado %>
    <%= f.input :observacoes %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
