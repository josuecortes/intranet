<div class="login-box">
  <div class="login-logo">
    <b>Siscom</b>SEED
  </div>

  <%= render 'layouts/messages' %>

  <!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg">Fa√ßa Login para ter acesso ao sistema<br/>Ou clique <a href="/intranet/index">aqui</a> para voltar!</p>
    
    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>

      <div class="form-group has-feedback">
        <%= f.input :cpf, :label=>"CPF", required: true, autofocus: true, :input_html=>{:class=>'cpf'} %>
      </div>
      <div class="form-group has-feedback">
        <%= f.input :password, required: true %>
      </div>
      <div class="row">
        <div class="col-xs-8">
          <div class="checkbox icheck">
            <label>
            	<%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </label>
          </div>
        </div>
        <!-- /.col -->
        <div class="col-xs-4">
          <button type="submit" class="btn btn-primary btn-block btn-flat">Entrar</button>
        </div>


        <!-- /.col -->
      </div>
    <% end %>

    

  </div>
  <!-- /.login-box-body -->
</div>
<!-- /.login-box -->
