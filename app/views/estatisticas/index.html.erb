<h4><strong> RELATÓRIO DE ATENDIMENTOS POR TÉCNICO </strong></h4>
<br/>

<table id="tabela" class="display2" cellspacing="0" width="100%">
	<thead>
		<tr>
			<th>TECNICO</th>
			<th>TOTAL</th>
			<th>PERCENTUAL</th>
			<th>RUIM</th>
			<th>NORMAL</th>
			<th>BOM</th>
			<th>OTIMO</th>
		</tr>
	</thead>
	<tbody>
		<% @tecnicos.each do |t| %>
			<% if t.atendimentos.no_periodo(@ini, @fim).count > 0 %>
				<tr>
					<td><%= t.name %></td>
					<td><%= t.atendimentos.no_periodo(@ini, @fim).count %></td>
					<td><%= ((t.atendimentos.no_periodo(@ini, @fim).count)*100)/@chamados.count %>%</td>

					<% ctf = 0 %>
					<% ctr = 0 %>
					<% ctn = 0 %>
					<% ctb = 0 %>
					<% cto = 0 %>

					<% t.atendimentos.no_periodo(@ini, @fim).each do |c| %>
						<% if c.status == "FECHADO" %>
							<% ctf = ctf + 1 %>
							<% if c.nivel_satisfacao_usuario == 1 %>
								<% ctr = ctr + 1 %>
							<% end %>
							<% if c.nivel_satisfacao_usuario == 2 %>
								<% ctn = ctn + 1 %>
							<% end %>
							<% if c.nivel_satisfacao_usuario == 3 %>
								<% ctb = ctb + 1 %>
							<% end %>
							<% if c.nivel_satisfacao_usuario == 4 %>
								<% cto = cto + 1 %>
							<% end %>
						<% end %>
					<% end %>

					<% if ctf > 0 %>
						<td><%= (ctr * 100)/ctf %>%</td>
						<td><%= (ctn * 100)/ctf %>%</td>
						<td><%= (ctb * 100)/ctf %>%</td>
						<td><%= (cto * 100)/ctf %>%</td>
					<% else %>
						<td></td>
						<td></td>
						<td></td>
						<td></td>
					<% end %>

				</tr>
			<% end %>
		<% end %>
	</tbody>
</table>

