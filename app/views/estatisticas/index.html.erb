<% cores = ['#E32636','#FFFF00', '#ECDB00', '#FFFFE0', '#ECD690', '#F2B73F', '#ADFF2F', '#EEAD2D', '#DDA0DD', '#9966CC', '#7BA05B', '#0000FF', '#6A5ACD', '#00BDCE', '#054F77', '#a6aa3e', '#8B5742', '#DC143C', '#712F26', '#DE3163', '#808080', '#A9A9A9' '#F08080', '#BDB76B', '#FF2400', '#555D50', '#44D7A8', '#B7410E', '#3D2B1F', '#831D1C', '#2E8B57', '#DF73FF', '#4C516D', '#00A86B', '#E79FC4', '#C8A2C8', '#BC8F8F', '#808000', '#000000', '#8A008A', '#705714', '#FF2401'] %>


	<script type="text/javascript">
window.onload = function () {
	var chart = new CanvasJS.Chart("chartContainer",
	{
		theme: "theme2",
		title:{
			text: "Grafico por Problema"
		},
		legend: {
      horizontalAlign: "right",
      verticalAlign: "center"
    },
		data: [
		{
			type: "pie",
			showInLegend: true,
			toolTipContent: "{y} - #percent %",
			yValueFormatString: "#0. Vezes",
			legendText: "{indexLabel}",

			<% valor = 1 %>

			dataPoints: [

				<% @problemas.each do |p| %>
					<% if p.chamados.no_periodo(@ini, @fim).count > 0 %>
							<% x = p.chamados.no_periodo(@ini, @fim).count %>
							{  y: <%= x.to_int %>, indexLabel: "<%= p.descricao %>(<%= x %>)",
							   color: "<%= cores[valor] %>" },
							
					<% end %>
					<% valor = valor + 1 %>
				<% end %>

			]
		}
		]
	});


	chart.render();

var canvas = $("#chartContainer .canvasjs-chart-canvas").get(0);
var dataURL = canvas.toDataURL();
//console.log(dataURL);

$("#exportButton").click(function(){
    var pdf = new jsPDF();
    pdf.addImage(dataURL, 'JPEG', 0, 0);
    pdf.save("download.pdf");
});


}
	</script>
	

<div id="chartContainer" style="height: 400px; width: 100%;"></div>
<button id="exportButton" type="button">Exportar para PDF</button>