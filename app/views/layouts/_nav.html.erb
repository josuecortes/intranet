<header class="main-header">

    <!-- Logo -->
    <a href="/intranet/index" class="logo">
      <!-- mini logo for sidebar mini 50x50 pixels -->
      <span class="logo-mini"><b>I</b>SEED</span>
      <!-- logo for regular state and mobile devices -->
      <span class="logo-lg"><b>Intranet</b>SEED</span>
    </a>

    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
      <!-- Sidebar toggle button-->
      <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
        <span class="sr-only">Toggle navigation</span>
      </a>
      <!-- Navbar Right Menu -->
      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
          <!-- Messages: style can be found in dropdown.less -->
         
          <!-- User Account: style can be found in dropdown.less -->
          <li class="dropdown user user-menu">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <img src="<%= current_user.avatar.url(:thumb).to_s %>" class="user-image" alt="User Image">
              
              <span class="hidden-xs"><%= (current_user.name.split(" ").first).capitalize %></span>
            </a>
            <ul class="dropdown-menu">
              <!-- User image -->
              <li class="user-header">
                <img src="<%= current_user.avatar.url(:thumb).to_s %>" class="img-circle" alt="User Image">
                

                <p>
                  <%= current_user.name %>
                  <small>Cadastrado deste <%= current_user.created_at.strftime("%d/%m/%Y") %></small>
                </p>
              </li>
              
              <!-- Menu Footer-->
              <li class="user-footer">
                <div class="pull-left">
                  <a href="/users/edit" class="btn btn-primary btn-flat">Perfil</a>
                </div>
                <div class="pull-right">
                  <a data-method="delete" href="/users/sign_out" class="btn btn-danger btn-flat">Sair</a>
                </div>
              </li>
            </ul>
          </li>
          
        </ul>
      </div>

    </nav>
  </header>

