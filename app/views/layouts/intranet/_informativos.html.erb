<% cont = 0 %>

<% @informativos.each do |informativo| %>
  <!-- Modal -->
    <div class="modal fade" id="myModali<%= cont %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <div class="row">
              <div class="col-xs-3">
                <div class="product-img">
                  <% if !informativo.user.avatar.blank? %>
                    <img src="<%= informativo.user.avatar.url(:thumb) %>" alt="Imagem do Usuario" class="img-circle">
                  <% else %>
                    <%= image_tag('user-default.jpg', :class=>"user-image img-circle") %>
                  <% end %>
                </div>
              </div>
              <div class="col-xs-9">
                <h4 class="modal-title" id="myModalLabel"><%= informativo.titulo %>
                  <br>
                  <small>
                    <i>Por</i> <%= (informativo.user.name.split(" ").first).capitalize %> <i>em</i> <%= informativo.created_at.strftime("%d/%m/%Y %H:%M") %>
                  </small>

                  <div class="btn-group pull-right">
                    <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <span class="fa fa-file" aria-hidden="true"></span> Arquivos(<%= informativo.arquivos.count%>) <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                      <% informativo.arquivos.each do |a| %>
                        &nbsp;<%= link_icone("arquivo") %><a href="<%= a.avatar %>"  download target="_blank" class=""><span class="fa fa-file" aria-hidden="true"></span> <%= a.nome %></a><br/>
                      <% end %>
                    </ul>
                  </div>


                </h4>
              </div>
            </div>
          </div>
          <div class="modal-body">
            <% if !informativo.avatar.blank? %>
              <img src="<%= informativo.avatar.url.to_s %>" class="img img-responsive" alt="Imagem">
              <br/>
            <% end %>
            <%= simple_format(informativo.informacoes) %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Fechar</button>
          </div>
        </div>
      </div>
    </div>
  <!-- Fim Modal -->
  <% cont = cont + 1 %>

<% end %>
