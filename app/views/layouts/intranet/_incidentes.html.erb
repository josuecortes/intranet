<div class="box box-danger">
  <div class="box-header">
    <h3 class="box-title"><i class="fa fa-ambulance"></i> Incidentes</h3>
    
    <div class="box-tools pull-right">
    	<span class="label label-danger"><%= @inci_acontecendo.count %></span>
      <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
      </button>
      <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
    </div>

  </div>
  <!-- /.box-header -->
  <div class="box-body no-padding">
    <table class="table">
      <% cont_inci = 1 %>
      <% @inci_acontecendo.each do |incidente| %>
      	<tr>
	        <td><%= detalhes2(incidente.tipo_incidente, :descricao) %></td>
	        <td>
	        	<button type="button" class="btn btn-danger btn-small pull-right" data-toggle="modal" data-target="#myModalinci<%= cont_inci %>">
                    <%= link_icone('detalhes') %>
                  </button>	        	
	        </td>
	      </tr>

	      <!-- Modal -->
          <div class="modal fade" id="myModalinci<%= cont_inci %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                  <h4 class="modal-title label label-danger" id="myModalLabel"><%= incidente.tipo_incidente.descricao %></h4>
                </div>
                <div class="modal-body">
                  <%= simple_format(incidente.descricao) %>
                  <%= incidente.data_inicio %>
                  <span class="label label-danger"><%= incidente.status %></span>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-danger" data-dismiss="modal">Fechar</button>
                </div>
              </div>
            </div>
          </div>
        <!-- Fim Modal -->


	      <% cont_inci = cont_inci + 1 %>  
	    <% end %>
      
      

      
    </table>
  </div>
  <!-- /.box-body -->
</div>
<!-- /.box -->
