      <table id="tabela" class="display" cellspacing="0" width="100%">
        <thead>
          <%= render partial: "ordems/header_tabela" %>
        </thead>

        <% @ordem = 1 %>
        <tbody>
          <% @aguardando.each do |ordem| %>
            <%= render partial: "ordems/tabela", object: ordem, as: 'ordem' %>
            <% @ordem = @ordem + 1 %>
          <% end %>
        </tbody>
      </table>



    </div>
  </div>
