<div>

  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">

  	<li role="presentation" class=""><a href="/ordems">ABERTAS(<%= @abertas.count %>)</a></li>

    <li role="presentation" class=""><a href="/ordems/em_atendimento">EM ATENDIMENTO(<%= @atendimentos.count %>)</a></li>

    <li role="presentation" class=""><a href="/ordems/concluidos">CONCLUIDAS(<%= @concluidas.count %>)</a></li>

    <li role="presentation" class="active"><a href="#AGUARDANDO" aria-controls="AGUARDANDO" role="tab" data-toggle="tab">AGUARDANDO(<%= @aguardando.count %>)</a></li>

