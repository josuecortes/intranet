<%= simple_form_for(@ordem) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <% @ordem.conversa = "" %>

    <% if !@ordem.historico.blank? %>
      <%= simple_format(@ordem.historico) %>
    <% end %>

    <%= f.input :conversa %>

    <%= f.input :status, as: :hidden, :input_html=>{:value=>"FECHADO"} %>
    <%= f.input :data_status_fechado, as: :hidden, :input_html=>{:value=>DateTime.now} %>
    <%= f.input :cabecalho, as: :hidden, :input_html=>{:value=>"#{current_user.name} - #{data_br_completa(DateTime.now)}"} %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Receber Equipamento", :class=>'btn btn-primary' %>
    <%= link_to 'Voltar', ordems_path, :class=>'btn btn-default' %>
  </div>
  <% end %>
